---
import { ScrollReveal } from './ScrollReveal';
---
<section id="marca" class="py-40 bg-nacho-blanco px-6 md:px-20 overflow-hidden">
    <ScrollReveal client:load>
        <p class="text-nacho-azul font-bold mb-20 uppercase tracking-widest text-[10px]">02. Tipografía</p>
    </ScrollReveal>

    <div class="space-y-32">
        <!-- Letras Gigantes Decorativas -->
        <div class="grid md:grid-cols-2 gap-10 items-center">
            <ScrollReveal client:load>
                <span class="text-[18rem] md:text-[25rem] font-zalando font-bold leading-none tracking-tighter text-nacho-negro/5 select-none">Aa</span>
            </ScrollReveal>
            <ScrollReveal client:load delay={0.2}>
                <h3 class="text-4xl md:text-5xl font-zalando font-bold mb-6">Zalando Sans SemiExpanded</h3>
                <p class="text-lg md:text-xl text-nacho-negro/60 leading-relaxed mb-8 max-w-md">
                    Una fuente contemporánea de proporciones anchas que equilibra la autoridad con la modernidad.
                </p>
                <div class="flex gap-4">
                    <span class="px-6 py-2 bg-nacho-negro text-white rounded-full text-[10px] font-bold uppercase tracking-widest">Bold 700</span>
                    <span class="px-6 py-2 border border-nacho-negro/20 rounded-full text-[10px] font-bold uppercase tracking-widest">Regular 400</span>
                </div>
            </ScrollReveal>
        </div>

        <!-- El Alfabeto Completo (Specimen) -->
        <ScrollReveal client:load>
            <div class="border-y border-nacho-negro/10 py-16">
                <p class="text-[10px] uppercase text-nacho-negro/30 mb-10 tracking-[0.3em]">Full Character Set</p>
                <p class="text-3xl md:text-6xl font-zalando font-bold leading-tight break-all tracking-tight text-nacho-negro">
                    ABCDEFGHIJKLMNÑOPQRSTUVWXYZ<br/>
                    abcdefghijklmnñopqrstuvwxyz<br/>
                    0123456789 !@#$%^&*()
                </p>
            </div>
        </ScrollReveal>

        <!-- Pesos y Estilos -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-16">
            <ScrollReveal client:load delay={0.1}>
                <p class="text-[10px] uppercase opacity-30 mb-4 tracking-widest">Bold</p>
                <p class="text-5xl font-zalando font-bold text-nacho-negro">Conecta</p>
            </ScrollReveal>
            <ScrollReveal client:load delay={0.2}>
                <p class="text-[10px] uppercase opacity-30 mb-4 tracking-widest">Regular</p>
                <p class="text-5xl font-zalando font-normal text-nacho-negro">Conecta</p>
            </ScrollReveal>
            <ScrollReveal client:load delay={0.3}>
                <p class="text-[10px] uppercase opacity-30 mb-4 tracking-widest">Italic</p>
                <p class="text-5xl font-zalando italic font-normal text-nacho-azul">Conecta</p>
            </ScrollReveal>
        </div>
    </div>
</section>