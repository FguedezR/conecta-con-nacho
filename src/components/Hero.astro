---
import { RevealText } from './RevealText';
import { ScrollReveal } from './ScrollReveal';
---
<section id="inicio" class="min-h-screen w-full flex flex-col items-center justify-center bg-nacho-negro text-nacho-blanco px-8 relative overflow-hidden">
  <div class="w-full max-w-7xl mx-auto text-center z-10">
    <h1 class="text-[12vw] md:text-[9vw] font-zalando font-bold leading-[0.85] tracking-tighter uppercase inline-block">
      <div class="px-4">
        <RevealText client:load text="CONECTA" delay={0.2} />
      </div>
      <div class="px-4 text-nacho-lima">
        <RevealText client:load text="CON NACHO" delay={0.4} />
      </div>
    </h1>
    <ScrollReveal client:load delay={0.8}>
      <p class="mt-12 text-nacho-blanco/40 text-xs tracking-[0.5em] uppercase">Visual Identity System 2026</p>
    </ScrollReveal>
  </div>
</section>